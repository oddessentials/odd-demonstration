{
    "name": "odd-web-terminal",
    "version": "1.0.0",
    "private": true,
    "description": "xterm.js terminal for ODTO TUI mirroring",
    "scripts": {
        "build": "esbuild terminal.js --bundle --outfile=dist/bundle.js --minify --sourcemap --format=esm --loader:.css=css",
        "watch": "esbuild terminal.js --bundle --outfile=dist/bundle.js --watch --format=esm --loader:.css=css"
    },
    "dependencies": {
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0",
        "xterm-addon-web-links": "^0.9.0",
        "xterm-addon-serialize": "^0.10.0"
    },
    "devDependencies": {
        "esbuild": "^0.20.0"
    }
}