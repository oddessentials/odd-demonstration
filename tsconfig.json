{
    "compilerOptions": {
        "target": "ES2022",
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "types": [
            "node"
        ]
    },
    "include": [
        "tests/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}