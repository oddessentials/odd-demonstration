{
    "branches": [
        "main"
    ],
    "plugins": [
        "@semantic-release/commit-analyzer",
        "@semantic-release/release-notes-generator",
        [
            "@semantic-release/exec",
            {
                "prepareCmd": "echo ${nextRelease.version} > src/interfaces/tui/VERSION && sed -i 's/^version = \"[^\"]*\"/version = \"${nextRelease.version}\"/' src/interfaces/tui/Cargo.toml && cd packages/npm-shim && npm version ${nextRelease.version} --no-git-tag-version --allow-same-version"
            }
        ],
        [
            "@semantic-release/git",
            {
                "assets": [
                    "src/interfaces/tui/VERSION",
                    "src/interfaces/tui/Cargo.toml",
                    "packages/npm-shim/package.json"
                ],
                "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
            }
        ],
        [
            "@semantic-release/github",
            {
                "assets": []
            }
        ]
    ]
}